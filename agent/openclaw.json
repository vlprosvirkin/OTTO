{
  // OpenClaw config for OTTO — Autonomous AI Treasury Agent
  // Secrets are read from env vars — never hardcode them here

  "ai": {
    "provider": "anthropic",
    "model": "claude-sonnet-4-6",
    "apiKey": { "source": "env", "id": "CLAUDE_API_KEY" }
  },

  "workspace": {
    "agentMd": "agent.md",
    "skillsDir": "skills"
  },

  "channels": {
    "telegram": {
      "enabled": true,
      "dmPolicy": "open",
      "allowFrom": ["*"],
      "groups": { "*": { "requireMention": true } }
    },
    "webchat": {}
  },

  "gateway": {
    "mode": "local"
  },

  "skills": {
    "entries": {
      "arc-balance": { "enabled": true },
      "arc-wallet": { "enabled": true },
      "arc-transfer": { "enabled": true },
      "arc-gateway": { "enabled": true },
      "arc-x402": { "enabled": true },
      "arc-vault": { "enabled": true },
      "arc-rebalancer": { "enabled": true },
      "arc-oracle": { "enabled": true },
      "arc-yield": { "enabled": true }
    }
  }
}
